    "unique_items = purchase_data['Item Name'].nunique()\n",
    "ave_price = purchase_data['Price'].mean()\n",
    "num_purch = purchase_data['Purchase ID'].count()\n",
    "total_rev = purchase_data['Price'].sum()\n",
    "d = {'Number of Unique Items': [unique_items], \n",
    "     'Average Price': [ave_price], \n",
    "    'Number of Purcahses': [num_purch], \n",
    "    'Total Revenue': [total_rev]}\n",
    "sum_table = pd.DataFrame(data=d)\n",
    "sum_table['Average Price'] = sum_table['Average Price'].astype(float).map(\"${:,.2f}\".format)\n",
    "sum_table['Total Revenue'] = sum_table['Total Revenue'].astype(float).map(\"${:,.2f}\".format)\n",

   "source": [
    "players = purchase_data.groupby(['SN'])\n",
    "player_value = players['Price'].sum().sort_values(ascending=False)\n",
    "top_players = player_value.head()\n",
    "num_pur = players['Purchase ID'].count()\n",
    "ave_top = player_value/num_pur\n",
    "final_top = pd.merge(num_pur, top_players, on='SN', how=\"inner\")\n",
    "final_top['Average Purchase Price'] = ave_top\n",
    "final_top.rename(columns={'Purchase ID': 'Purchase Count', 'Price': 'Total Purchase Value'}, inplace=True)\n",
    "final2 = final_top.sort_values(by=['Total Purchase Value'], ascending=False)\n",
    "final2['Total Purchase Value']= final2['Total Purchase Value'].map(\"${:,.2f}\".format)\n",
    "final2['Average Purchase Price'] = final2['Average Purchase Price'].map(\"${:,.2f}\".format)\n",
    "final3 = final2[['Purchase Count', 'Average Purchase Price', 'Total Purchase Value']]\n",
    "final3"
   ]

    "group_table = purchase_data.groupby(['Age Group'])\n",
    "pri_sum = group_table['Price'].sum()\n",
    "pri_sum2 = pri_sum.map(\"${:,.2f}\".format)\n",
    "pur_count = group_table['Purchase ID'].count()\n",
    "ave_pur_price = pri_sum/pur_count\n",
    "summary_age_table = pd.merge(pur_count, pri_sum, on='Age Group')\n",
    "summary_age_table.rename(columns={'Purchase ID': 'Purchase Count', 'Price': 'Total Purchase Value'}, inplace=True)\n",
    "summary_age_table['Average Purchase Value']=ave_pur_price.map(\"${:,.2f}\".format)\n",
    "avg_total = pri_sum/total_id\n",
    "summary_age_table['Avg Total Purchase per Person']= avg_total.map(\"${:,.2f}\".format)\n",
    "summary_age_table\n"

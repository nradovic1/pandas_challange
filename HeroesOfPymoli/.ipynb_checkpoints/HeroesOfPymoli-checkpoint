    "gen = purchase_data.drop_duplicates(subset = 'SN')\n",
    "fem_play = gen.loc[gen['Gender']=='Female']\n",
    "male_play = gen.loc[gen['Gender']=='Male']\n",
    "nd_play = gen.loc[(gen['Gender'] != 'Female') & (gen['Gender'] != 'Male')]\n",
    "\n",
    "fem_total = fem_play.Gender.count()\n",
    "male_total = male_play.Gender.count()\n",
    "nd_total = nd_play.Gender.count()\n",
    "fem_p = (fem_total/total_players)*100\n",
    "male_p = (male_total/total_players)*100\n",
    "nd_p = (nd_total/total_players)*100\n",
    "\n",
    "g = {'Gender': ['Male', 'Female', 'Other / Non-Disclosed'], \n",
    "                 'Total Count': [male_total, fem_total, nd_total], \n",
    "                'Percantage of Players': [male_p, fem_p, nd_p]}\n",
    "g_t = pd.DataFrame(g)\n",
    "g_table = g_t.set_index('Gender')\n",
    "g_table['Percantage of Players'] = g_table['Percantage of Players'].astype(float).map(\"{:,.2f}%\".format)\n",
    "g_table"
   ]

   "source": [
    "gender_data = purchase_data[['Purchase ID', 'Price', 'Gender']]\n",
    "gen_table = gender_data.groupby(['Gender'])\n",
    "\n",
    "ave_price_gen = gen_table.Price.mean()\n",
    "total_pur_gen = gen_table['Purchase ID'].count()\n",
    "total_pur_val = gen_table['Price'].sum()\n",
    "adding_to_table = pd.DataFrame({'Gender': ['Female', \"Male\", 'Other / Non-Disclosed'], \n",
    "                   'Avg Total Purchase per Person': [fem_total, male_total, nd_total]})\n",
    "new_table = pd.merge(pd.merge(total_pur_gen, ave_price_gen, on='Gender'), total_pur_val, on='Gender')\n",
    "new_try = adding_to_table.set_index('Gender')\n",
    "real_col = total_pur_val/new_try['Avg Total Purchase per Person']\n",
    "new_table['Avg Total Purchase per Person']=real_col.map(\"${:,.2f}\".format)\n",
    "\n",
    "new_table.rename(columns={'Purchase ID': 'Purchase Count', 'Price_x': 'Average Purchase Price',\n",
    "                          'Price_y': 'Total Purchase Value'}, inplace=True)\n",
    "new_table['Average Purchase Price']=new_table['Average Purchase Price'].map(\"${:,.2f}\".format)\n",
    "new_table['Total Purchase Value']=new_table['Total Purchase Value'].map(\"${:,.2f}\".format)\n",
    "new_table"
   ]

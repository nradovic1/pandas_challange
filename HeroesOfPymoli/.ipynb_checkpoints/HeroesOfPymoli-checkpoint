    "pop_items = purchase_data[['Item ID', 'Item Name', 'Price', 'Purchase ID']]\n",
    "group_first = pop_items.groupby(['Item ID', 'Item Name'])\n",
    "purchase_count = group_first['Purchase ID'].count()\n",
    "ave_item_price = group_first['Price'].mean()\n",
    "ave_item_dollar = ave_item_price.map(\"${:,.2f}\".format)\n",
    "total_pur_value = purchase_count *ave_item_price\n",
    "item_table = pd.merge(purchase_count, ave_item_dollar, on=['Item ID', 'Item Name'])\n",
    "item_table['Total Purchase Value']=total_pur_value\n",
    "item_table.rename(columns={'Purchase ID': 'Purchase Count', 'Price': 'Item Price'}, inplace=True)\n",
    "item_table2 = item_table.sort_values(by=['Purchase Count'], ascending=False)\n",
    "item_table2['Total Purchase Value']=item_table2['Total Purchase Value'].map(\"${:,.2f}\".format)\n",
    "item_table_top_5 = item_table2.head()\n",
